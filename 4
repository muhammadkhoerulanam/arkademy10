#include<stdio.h>
#include <stdlib.h>
void cetak_gambar5();
void cetak_gambar7();
int x,y,i,n;
char lanjut = 'y';
int main()
{
    int pilih,keluar,lanjut;
    lanjut=0;
    while(lanjut==0){
    printf("1. Cetak_gambar(5)\n");
    printf("2. Cetak_gambar(7)\n");
    printf("0. Exit\n");
    printf("Masukkan Pilihan Anda = \n");
    scanf ("%d",&pilih);
    switch(pilih){
case 1 :
    cetak_gambar5();
    break;
case 2 :
    cetak_gambar7();
    break;
case 0:
            system("cls");
            printf("\n\n\tAnda telah keluar!\n");
            lanjut = 1;

default:
    break;
    }

        }

    printf("\nNuhun\n");
}
void cetak_gambar5(){
    for (x = 1; x <= 5; x++)
    {
        for (y = 1; y <= 5; y++)
        {
            if ( x == y || y==5-x+1)
            {
                printf(" x ");
            }
            else{
                printf(" = ");
            }
        }
printf("\n");
    }
getch ();

}
void cetak_gambar7(){
for (i = 1; i <= 7; i++)
    {
        for (n = 1; n <= 7; n++)
        {
            if ( i == n || n==7-i+1)
            {
                printf(" x ");
            }
            else{
                printf(" = ");
            }
        }
printf("\n");
    }
getch ();
}
